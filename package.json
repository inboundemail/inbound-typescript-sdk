{
  "name": "@inboundemail/sdk",
  "version": "4.0.0",
  "description": "Official SDK for Inbound Email API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "bun test sdk.test.ts",
    "test:send": "bun test sdk.send.test.ts",
    "test:react": "bun test sdk.react.test.ts",
    "test:cid": "bun test sdk.cid.test.ts",
    "test:all": "bun test sdk.test.ts sdk.send.test.ts sdk.react.test.ts sdk.cid.test.ts",
    "test:ci": "bun test sdk.test.ts --reporter=verbose",
    "test:send:ci": "bun test sdk.send.test.ts --reporter=verbose",
    "test:react:ci": "bun test sdk.react.test.ts --reporter=verbose",
    "test:cid:ci": "bun test sdk.cid.test.ts --reporter=verbose",
    "test:all:ci": "bun test sdk.test.ts sdk.send.test.ts sdk.react.test.ts sdk.cid.test.ts --reporter=verbose",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run build",
    "publish:build": "npm run build && npm publish",
    "publish:patch": "npm version patch && npm run build && npm publish",
    "publish:breaking": "npm version minor && npm run build && npm publish"
  },
  "keywords": [
    "inbound",
    "email",
    "api",
    "sdk",
    "typescript"
  ],
  "author": "Inbound Email",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inboundemail/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/inboundemail/sdk/issues"
  },
  "homepage": "https://github.com/inboundemail/sdk#readme",
  "devDependencies": {
    "@react-email/components": "^0.0.25",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "bun-types": "latest",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
